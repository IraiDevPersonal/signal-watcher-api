generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model WatchList {
  id        String   @id @default(cuid())
  name      String
  terms     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
}

model Event {
  id           String    @id @default(cuid())
  type         String
  description  String
  severity     Severity  @default(LOW)
  aiSummary    String?
  aiSuggestion String?
  watchListId  String
  watchList    WatchList @relation(fields: [watchListId], references: [id])
  createdAt    DateTime  @default(now())
}

enum Severity {
  LOW
  MED
  HIGH
  CRITICAL
}
