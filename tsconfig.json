{
  "compilerOptions": {
    "target": "es2024",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
